/dts-v1/;

#include <nuvoton/npcm400.dtsi>
#include <nuvoton/npcm/npcm4/npcm4-pinctrl.dtsi>
#include <nuvoton/npcm/npcm4/npcm4-pinmux.dtsi>

/ {
	model = "Nuvoton NPCM400 evaluation board";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,shell-uart = &uart0;
		zephyr,console = &uart0;
	};

	aliases {
	};
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&cr_uart1_sin_sout_gpio14_15>;
	pinctrl-names = "default";
};

&uart1 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&cr_uart2_sin_sout_gpio30_31>;
	pinctrl-names = "default";
};
